@{
    ViewData["Title"] = "Email Verification";
    Layout = "~/Views/Shared/_AuthenticationLayout.cshtml";
}
    <!-- Centered Card -->
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-4">
                    <!-- Card Content -->
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Activate Your Account!</h1>
                    </div>

                    <div class="form-group">
                        <hr />
                        @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
                        {
                            <div class="alert alert-success">
                                @Html.Raw(ViewBag.SuccessMessage)
                                Click @Html.ActionLink("here", "Login", "Authentication") to log in your account.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                
                                @Html.Raw(ViewBag.Message)
                                Click @Html.ActionLink("Register", "Register", "Authentication") for creating a new account.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
